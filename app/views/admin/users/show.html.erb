<h1><%= @user.email.upcase %></h1>

<p>
  <b><%= "Login Count" %>:</b>
  <%= @user.sign_in_count %>
</p>

<p>
  <b><%= "Last IP Address" %>:</b>
  <%= @user.last_sign_in_ip %>
</p>

<p>
  <b><%= "Confirmed On" %>:</b>
  <%= @user.confirmed_at %>
</p>

<p>
  <b><%= "Confirmation Sent On" %>:</b>
  <%= @user.confirmation_sent_at %>
</p>

<p>
  <b><%= "Unconfirmned" %>:</b>
  <%= @user.unconfirmed_email %>
</p>

<p>
  <b><%= "Failed Attempts" %>:</b>
  <%= @user.failed_attempts %>
</p>

<p>
  <b><%= "Created On" %>:</b>
  <%= @user.created_at %>
</p>

<p>
  <b><%= "Updated On" %>:</b>
  <%= @user.updated_at %>
</p>

<p>
  <b><%= "Roles" %>:</b>
  <ul class="roles">
      <% @user.roles.each do |r| %>
      <li><%= r %></li>
      <% end %>
  </ul>
</p>

<br />
<br />
<%= link_to t('general.edit'), edit_admin_user_path(@user) %> |
<%= link_to t('general.back'), admin_users_path %>
