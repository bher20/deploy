<%= form_for(@application, :html => { :multipart => true }) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :script %><br />
    <%= f.file_field :script %>
  </div>
  <div class="field">
    <%= f.label :repository %><br />
    <%= f.text_field :repository %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
